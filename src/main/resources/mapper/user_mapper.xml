<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.banban.login_security.mapper.MemberMapper">
    <select id="findAll" resultType="com.banban.login_security.domain.Member">
        select * from USER_INFO
    </select>

    <select id="findById" parameterType="String" resultType="com.banban.login_security.domain.Member">
        select ID, NAME, PASSWORD from USER_INFO where ID = #{id}
    </select>

    <select id="insert" parameterType="com.banban.login_security.domain.Member">
        INSERT INTO USER_INFO (id, password, name) VALUES (#{id}, #{password}, #{name})
    </select>

</mapper>